/* miniprogram/pages/evaluate/evaluate.wxss */
@import "./evaluate.skeleton.wxss";

#evaluate{
  height: 100vh;
  background-color: #fff;
}
.my-bg{
  padding: 50rpx 0;
  background-color: #ea1c6a;
}
.my-info{
  width: 100%;
  margin-left:40rpx;
}
.my-img{
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
  border-radius: 50%;
  box-shadow: 0 0 0 8rpx rgba(225,225,225,0.3);
}
.nickname{
  color: #fff;
  font-size:32rpx;
  text-align: center;
  margin-top: 40rpx;
  margin-left: 40rpx;
}
.all-box{
  width: 100%;
  padding: 30rpx 60rpx;
  box-sizing: border-box;
  font-weight: bold;
  border-bottom: 1px solid #E6E6E6;

}
.all-count{
  color:#1C1C1C ;
  margin-left: 10rpx;
}
.evaluate-box{
  background-color: #F6F6F6;
  padding-left: 20rpx;
  padding-top: 30rpx;

  white-space: nowrap;
}
.goods-box{
  display: inline-block;
  width: 650rpx;
  /* height: 120rpx; */
  background-color: #fff;
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  margin-right:20rpx ;
  margin-bottom: 40rpx;
}
.goods-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background-color: #ddd;
  margin-right: 10rpx;
  
}

.goods-info{
  width: calc(100% - 100rpx - 10rpx - 128rpx - 62rpx);
  font-weight: 600;
}
.goods-count{
  font-size: 20rpx;
  color: #A4A4A4 ;
  margin-top: 10rpx;
}
.goods-btn{
  padding: 15rpx 30rpx;
  box-sizing: border-box;
  background-color: #ea1c6a;
  border-radius: 10rpx;
  font-size: 24rpx;
  color: #fff;
  margin-top: 20rpx;
}
