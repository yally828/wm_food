/* components/addressPopup/addressPopup.wxss */
.address-popup-box{
  width: 100%;
  height: 100%;
  background-color: #fff;
}
.address-popup{
  width:100%;
  height: 60%;
  border-radius: 20rpx 20rpx 0 0;
}

.address-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  text-align: center;
}

.address-boxx{
  max-height: 80%;
  overflow-y: auto;
  padding: 0 100rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.info-item{
  padding-bottom:20rpx;
  padding-top: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}
.info-item-msg{
  font-size: 35rpx;
  font-weight: normal;
  color: #8a8a8a;
}
.defalut-logo{
  padding:5rpx 10rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #C8EBFA;
  color: #007AAE;
  margin-right: 20rpx;
}
.address-active{
  color: #444;
  font-weight: bold;

}
.address-info{
  color:#7A7A7A;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.info-name{
  margin-right: 20rpx;
}
.info-phone{
  vertical-align: middle;
}
.info-logo{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -70rpx;
  top: 50%;
  margin-top: -20rpx;
}

.new-address-btn{
  width: calc(100% - 40rpx);
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #ea1c6a;
  color: #fff;
}
