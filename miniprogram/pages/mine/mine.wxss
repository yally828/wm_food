/* miniprogram/pages/mine/mine.wxss */
@import "./mine.skeleton.wxss";
.my-bg{
  padding: 100rpx 0;
  background-color: #ea1c6a;
}
.my-info{
  width: 200rpx;
  margin:0 auto;
}
.my-img{
  width: 160rpx;
  height: 160rpx;
  display: block;
  margin: 0 auto;
  background-color: #f5f5f5;
  border-radius: 50%;
  box-shadow: 0 0 0 8rpx rgba(225,225,225,0.3);
}

.nickname{
  color: #fff;
  font-size:32rpx;
  text-align: center;
  margin-top: 20rpx;
}
.list{
  margin-top: 20rpx;
  background-color: #fff;
}
.list-item{
  height:100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  border-bottom: 1rpx solid #e8e8e8;
}
.list-item:last-child{
  border-bottom: none;
}
.title{
  color:#444;
  font-size: 28rpx;
}
.arrow{
  width: 40rpx;
  height: 40rpx;
  margin-top: 30rpx;
}








