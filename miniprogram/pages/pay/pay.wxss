/* miniprogram/pages/pay/pay.wxss */
@import "./pay.skeleton.wxss";
#pay-box{
  width: 100%;
  height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
  background: -webkit-linear-gradient(bottom, rgba(247,247,247,1) 78%, rgba(234,28,106,1) 100%);

}

.address-name{
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx;

}
.take-name{
  width: 50%;
  flex:1;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  font-weight: 600;
}
.take-name:nth-child(1){
  border-radius:  20rpx 0 0 0;
}
.take-name:nth-child(2){
  border-radius: 0 20rpx 0 0;
}

.inactive{
  font-weight: normal;
  background-color: #FBCFD0;
}
.address-box{
  padding: 20rpx 60rpx 40rpx 20rpx;
  box-sizing: border-box;
  border-top: 1px solid #f0f0f0;

}
.address-tip{
  font-size: 40rpx;
  color:#ea1c6a;
  font-weight: 500;
}
.address-msg{
  font-size: 40rpx;
  font-weight: bold;
}
.address-info{
  color:#7A7A7A;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.info-name{
  margin-right: 20rpx;
}


.order-box{
  width:100%;
  margin-top: 20rpx;
}
.order-msg{
  background-color: #fff;
  border-radius: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.shop-name{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1px solid #f0f0f0;
  margin-bottom: 40rpx;
}
.order-item{
  padding-bottom: 40rpx;
  box-sizing: border-box;
}
.order-img{
  width: 100rpx;
  height: 100rpx;
  background-color: #ddd;
  margin-right: 10rpx;
  border-radius: 10rpx;
}
.order-info{
  width: calc(100% - 110rpx);
}
.order-pro-name{
  width: calc(100% - 140rpx);
  font-size: 28rpx;
  font-weight: 600;
}
.order-pro-price{
  font-weight: 600;
}
.order-pro-rule,.order-pro-count{
  font-size: 24rpx;
  color:#7E7E7E;
}
.total-box{
  height: 100rpx;
  line-height: 100rpx;
  border-top: 1px dashed #f0f0f0;
  font-size: 28rpx;

}
.xj{
  font-size: 24rpx;
  margin-right: 10rpx;
}
.total{
  font-size: 40rpx;
  font-weight: 600;
}

.place-order-box{
  width: calc(100% - 60rpx) ;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
  background-color: #333333;
  border-radius: 60rpx;
  padding-left: 20rpx;
  color: #fff;
}
.place-order-price{
  font-weight: 600;
  font-size: 40rpx;
}
.place-order{
  width: 180rpx;
  text-align: center;
  background-color: #ea146a;
  border-radius: 0 60rpx 60rpx 0;
}





