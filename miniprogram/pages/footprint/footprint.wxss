/* miniprogram/pages/footprint/footprint.wxss */
@import "./footprint.skeleton.wxss";

#footprint{
  width: 100%;
  height: 100vh;
  padding: 0 20rpx;
  box-sizing: border-box;
  position: relative;
  background-color: #fff;

}
.scroll-view{
  margin-bottom: 200rpx;
}
.foot-box{
  width: 100%;
  height: 180rpx;
}
.foot-btn{
  width: 150rpx;
  height: 260rpx;

}
.foot-cicle{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 1px solid #D0D0D0;
  margin: 0 auto;
  margin-top: 120rpx ;
  padding: 10rpx;
  box-sizing: border-box;

}
.cicle-active{
  background-color: #ea1c6a;
  border:none;
}
.check-logo{
  width: 20rpx;
  height: 20rpx;
}
.foot-item{
  /* width: calc(100% - 150rpx);
  width: 100%; */
  border-bottom: 1px solid #E6E6E6;
  padding:40rpx 0;
  box-sizing: border-box;
}
.foot-img{
  width: 180rpx;
  height: 180rpx;
  background-color: #ddd;
  border-radius: 10rpx;

}
.foot-info{
  width: calc(100% - 180rpx - 20rpx);
}
.foot-title{
  font-weight: bold;
  margin-bottom: 20rpx;
}
.foot-price{
  color: #5F5F5F;
  font-size: 28rpx;
}
.delete-btn-box{
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #F8F8F8;
  padding: 20rpx 20rpx 40rpx 20rpx;
  box-sizing: border-box;
}
.delete-btn{
  width: 100%;
  height: 80rpx;
  background-color: #ea1c6a;
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
.edit-btn-box{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 120rpx;
  background-color: rgba(234,28,106,0.3);
  color: #fff;
  font-size: 28rpx;
  position: fixed;
  right: 20rpx;
  bottom: 200rpx;
}
.edit-active{
  background-color: #ea1c6a;
}