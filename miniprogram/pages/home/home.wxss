/* miniprogram/pages/home/home.wxss */
.home{
  height: 100vh;
}
.home-bg{
  height:200rpx;
  background-color: aqua;
}
.home-content{
  width: 100%;
  height:100%;
}
.home-box{
  height: calc(100% - 200rpx);
  padding: 20rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}
.logo-box{
  padding: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
  transform: translateY(-60rpx);
  border-radius: 20rpx;
}
.logo{
  width:120rpx;
  height:120rpx;
}
.img-box{
  height:120rpx;
}
.name{
  line-height: 120rpx;
  font-size: 36rpx;
  font-weight: bold;
  color:#444;
}
.menu-list{
  height: calc(100% - 160rpx);
}
.aside-menu{
  width:160rpx;
  color:#999;
}

.aside-active{
  background-color: #fff;
  font-weight: bold;
  color:#444;
}
.menu-content{
  padding: 20rpx 0;
  box-sizing: border-box;
  background-color: #fff;
  width:calc(100% - 160rpx);
 
}
.aside-item{
  height:100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 28rpx;
}
