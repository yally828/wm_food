/* components/addressPopup/addressPopup.wxss */
.fl{
  float: left;
}
.fr{
  float: right;
}
.clearfix::after{
  content:"";
  display:block;
  clear:both;
  line-height: 0;
  opacity: 0;
  overflow: hidden;
}
.auto-img{
  width:100%;
  height: 100%;
  display: block;
}
.one-text{
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.two-text{
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}



.address-popup-box{
  width: 100%;
  height: 100%;
  overflow: hidden;
  background-color: rgba(000,000,000,0.5);
  position: absolute;
  left: 0;
  top:0;
}
.address-popup{
  width:100%;
  height: 60%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  position: absolute;
  /* transform: translateY(444rpx); */
  /* transform: translateY(200%); */
}

@keyframes cartUp{
  0%{
    bottom: -60%;
  }
  100%{
    bottom:0
  }
}
@keyframes cartDown{
  0%{
    bottom: 0%;
  }
  100%{
    bottom:-60%;
  }
}
.showCart{
  animation:cartUp .3s linear both;
}
.closeCart{
  animation:cartDown .3s linear both;
}


.address-title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  padding: 0 20rpx;
  text-align: center;
}
.close{
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
  line-height: 40rpx;
  font-size: 50rpx;
  color: #8D8D8D;
}
.address-boxx{
  max-height: 80%;
  /* height: calc(100% - 80rpx - 80rpx - 30rpx ); */
  overflow-y: auto;
  padding: 0 100rpx 40rpx 40rpx;
  box-sizing: border-box;
}
.info-item{
  padding-bottom:20rpx;
  padding-top: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  position: relative;
}
.info-item-msg{
  font-size: 35rpx;
  font-weight: normal;
  color: #8a8a8a;
  /* padding-left: 40rpx;
  box-sizing: border-box; */
}
.defalut-logo{
  padding:5rpx 10rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  background-color: #C8EBFA;
  color: #007AAE;
  margin-right: 20rpx;
}
.address-active{
  color: #444;
  font-weight: bold;

}
.address-info{
  color:#7A7A7A;
  font-size: 28rpx;
  margin-top: 10rpx;
}
.info-name{
  margin-right: 20rpx;
}
.info-phone{
  vertical-align: middle;
}
.info-logo{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: -70rpx;
  top: 50%;
  margin-top: -20rpx;
}

.new-address-btn{
  width: calc(100% - 40rpx);
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  position: fixed;
  left: 20rpx;
  bottom: 20rpx;
  border-radius: 10rpx;
  background-color: #F6F6F6;
}
